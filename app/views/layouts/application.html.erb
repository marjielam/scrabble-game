<!DOCTYPE html>
<html>
  <head>
    <title>Scrabble</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="flash">
      <% flash.each do |key, value| %>
        <%= value %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
